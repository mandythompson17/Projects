@model Budgeter.Models.Household

@{
    ViewBag.Title = "Create";
}

<h2>Create/Join Household</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Create a Household</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

        <h4>Join a Household</h4>
        <hr />
        <form role="form" method="post" action="@Url.Action("Join")">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <textarea class="form-control" rows="1" name="code" placeholder="Join Code"></textarea>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Join" class="btn btn-default" />
                </div>
            </div>
        </form>

