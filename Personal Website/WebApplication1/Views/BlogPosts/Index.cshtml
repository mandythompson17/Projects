@model IEnumerable<WebApplication1.Models.BlogPost>

@{
    ViewBag.Title = "Blog Index";
}

  <!-- Page Content -->
<div id="blog" class="container blog-index">
    <div class="row text-center blog-header">
        <h1 class="page-header">
            My Blog
            <br /><br /><small>tag line</small>
        </h1>
    </div>
    <div class="row">
        <!-- Blog Entries Column -->
        <div class="col-md-8">
          
            @if (User.IsInRole("Admin"))
            {
                <div class="row text-center">
                    <a class="btn btn-success" href="@Url.Action("Create")">Create New</a>
                </div>
            } 
            <br /><br />
            
            <!-- Blog Posts -->
            @foreach (var item in Model.Reverse())
            {
                <div class="blog-post">
                  
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    }
                  
                    <h2>
                        <a href="@Url.Action("Details", new { Slug = item.Slug })">@Html.DisplayFor(modelItem => item.Title)</a>
                    </h2><br />
                    <p class="lead">
                        by <span class="author">Mandy Thompson</span>
                    </p>
                    <p><span class="glyphicon glyphicon-time"></span>@Html.DisplayFor(modelItem => item.Created)</p>
                    <hr>
                    @if (item.MediaURL != null)
                    {
                        <img class="img-responsive" src="@item.MediaURL" alt="">
                        <br>
                    }
                    <p>@Html.Raw(item.Body)</p>
                    <a class="btn btn-primary" href="@Url.Action("Details", new { Slug = item.Slug })">Read More <span class="glyphicon glyphicon-chevron-right"></span></a>
                    <hr class="end-post">
                </div>
            }

