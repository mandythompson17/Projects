                    <p class="lead">
                        by <span class="author">Mandy Thompson</span>
                    </p>
                    <hr>
                    <!-- Date/Time -->
                    <p><span class="glyphicon glyphicon-time"></span> @Html.DisplayFor(model => model.Created)</p>
                    <hr>
                    <!-- Preview Image -->
                    @if (Model.MediaURL != null)
                    {
                        <img class="img-responsive" src="@Model.MediaURL" alt="">
                        <br>
                    }
                    <!-- Post Content -->
                    <p>@Html.Raw(Model.Body)</p>
                    <hr>
                </div>
            </div>

